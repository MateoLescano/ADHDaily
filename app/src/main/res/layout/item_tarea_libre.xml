<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFilaTareaLibre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">


    <CheckBox
        android:id="@+id/cbTareaLibre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0" />


    <TextView
        android:id="@+id/tvTituloTareaLibre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/milmedium"
        android:text="Titulo"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cbTareaLibre"
        app:layout_constraintEnd_toStartOf="@+id/tvAgregado"
        app:layout_constraintStart_toEndOf="@+id/cbTareaLibre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tvDescrpiconTareaLibre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/millight"
        android:text="Descripcion"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/tvAgregado"
        app:layout_constraintStart_toEndOf="@+id/cbTareaLibre"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloTareaLibre" />

    <TextView
        android:id="@+id/tvAgregado"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millight"
        android:text="Agregado hoy"
        android:gravity="right"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>