<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFilaTareaLimite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">


    <CheckBox
        android:id="@+id/cbTareaLimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />


    <!--    <ImageView-->
    <!--        android:id="@+id/icono"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintVertical_bias="0.15"-->
    <!--        app:srcCompat="@drawable/ic_baseline_blur_circular_24" />-->

    <TextView
        android:id="@+id/tvTituloTareaLimite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/milmedium"
        android:text="Titulo"
        android:textColor = "?android:textColorPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cbTareaLimite"
        app:layout_constraintEnd_toStartOf="@+id/tvFechaTareaLimite"
        app:layout_constraintStart_toEndOf="@+id/cbTareaLimite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tvDescrpiconTareaLimite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/millight"
        android:text="Descripcion"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/tvRestante"
        app:layout_constraintStart_toEndOf="@+id/cbTareaLimite"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloTareaLimite" />

    <TextView
        android:id="@+id/tvFechaTareaLimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/milmedium"
        android:text="12/2/21"
        android:textColor = "?android:textColorPrimary"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRestante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRestante"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/millight"
        android:gravity="right"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaTareaLimite"
        tools:text="Tarea retrasada desde ayer" />


